<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daftar Tugas Saya</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background: #f0f2f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            max-width: 800px;
            margin-top: 5rem;
            background: #ffffff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #212529;
            text-align: center;
            margin-bottom: 2rem;
            font-weight: 700;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.05);
        }

        .input-group {
            border: 1px solid #ced4da;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .form-control {
            border: none;
            padding: 12px 20px;
        }

        .input-group-text {
            background-color: #0d6efd;
            border: none;
            color: white;
            padding: 12px 20px;
        }

        .btn-primary, .btn-success, .btn-danger {
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover, .btn-success:hover, .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .list-group-item {
            background: #f8f9fa;
            border: none;
            margin-bottom: 10px;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }

        .list-group-item:hover {
            background: #e9ecef;
            transform: scale(1.01);
        }

        .completed {
            text-decoration: line-through;
            color: #6c757d;
        }
        
        .modal-content {
            border-radius: 15px;
        }
        .modal-header {
            background-color: #0d6efd;
            color: white;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Daftar Tugas Saya ðŸ“‹</h1>

        <form id="addTodoForm" class="my-4">
            <div class="input-group">
                <input
                    type="text"
                    id="newTask"
                    class="form-control"
                    placeholder="Masukkan tugas baru..."
                    required
                />
                <button type="submit" class="btn btn-primary">Tambah</button>
            </div>
        </form>

        <ul id="todoList" class="list-group">
            <% todos.forEach(todo=> { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="<%= todo.completed ? 'completed' : '' %> task-text">
                    <%= todo.task %>
                </span>
                <div class="actions d-flex gap-2">
                    <button
                        class="btn btn-sm btn-success editBtn"
                        data-id="<%= todo.id %>"
                        data-bs-toggle="modal"
                        data-bs-target="#editModal"
                    >
                        <i class="fas fa-edit"></i> Edit
                    </button>
                    <button
                        class="btn btn-sm btn-danger deleteBtn"
                        data-id="<%= todo.id %>"
                    >
                        <i class="fas fa-trash-alt"></i> Hapus
                    </button>
                </div>
            </li>
            <% }); %>
        </ul>

        <div
            id="editModal"
            class="modal fade"
            tabindex="-1"
            aria-labelledby="editModalLabel"
            aria-hidden="true"
        >
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">Edit Tugas</h5>
                        <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                        ></button>
                    </div>
                    <div class="modal-body">
                        <form id="editTodoForm">
                            <div class="mb-3">
                                <label for="editTask" class="form-label">Tugas</label>
                                <input
                                    type="text"
                                    id="editTask"
                                    class="form-control"
                                    required
                                />
                            </div>
                            <button type="submit" class="btn btn-primary mt-3">
                                Simpan Perubahan
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            let editId;

            // Add new todo
            $("#addTodoForm").on("submit", function (e) {
                e.preventDefault();
                const task = $("#newTask").val().trim();
                if (task) {
                    $.ajax({
                        url: "/todos",
                        type: "POST",
                        contentType: "application/json",
                        data: JSON.stringify({ task: task }),
                        success: function () {
                            location.reload();
                        },
                        error: function (error) {
                            console.error("Error adding task:", error.responseText);
                        },
                    });
                }
            });

            // Delete a todo
            $(document).on("click", ".deleteBtn", function () {
                const id = $(this).data("id");
                if (confirm("Apakah Anda yakin ingin menghapus tugas ini?")) {
                    $.ajax({
                        url: "/todos/" + id,
                        type: "DELETE",
                        success: function () {
                            location.reload();
                        },
                    });
                }
            });

            // Show edit modal
            $(document).on("click", ".editBtn", function () {
                editId = $(this).data("id");
                const currentTask = $(this).closest("li").find(".task-text").text().trim();
                $("#editTask").val(currentTask);
            });

            // Update todo
            $("#editTodoForm").on("submit", function (e) {
                e.preventDefault();
                const task = $("#editTask").val().trim();
                if (task) {
                    $.ajax({
                        url: "/todos/" + editId,
                        type: "PUT",
                        data: JSON.stringify({ task: task, completed: false }),
                        contentType: "application/json",
                        success: function () {
                            location.reload();
                        },
                    });
                }
            });
        });
    </script>
</body>
</html>